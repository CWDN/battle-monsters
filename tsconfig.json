{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "out": "build/BattleMonsters.js"
    },
    "filesGlob": [
        "./src/game.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules",
        "bower_components",
        "plugins"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "./src/game.ts",
        "./src/Components/KeyboardMovement.ts",
        "./src/Entities/TileEntity.ts",
        "./src/States/Intro.ts",
        "./src/States/Loading.ts",
        "./src/States/Play.ts"
    ]
}
